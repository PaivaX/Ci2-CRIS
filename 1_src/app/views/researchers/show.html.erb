<section class="h-100 gradient-custom-2">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-lg-9 col-xl-7">
        <div class="card">
          <div class="rounded-top text-white d-flex flex-row" style="background-color: #00796b; height:180px;">
            <div class="ms-4 mt-5 d-flex flex-column" style="width: 150px;">
              <% if @researchers.avatar.attached? %>
              <%= image_tag @researchers.avatar, class: "img-fluid img-thumbnail mt-4 mb-2", style: "width: 180px; z-index: 1" %>
              <% elsif %>
              <%= image_tag("avatar.jpg", class: "img-fluid img-thumbnail mt-4 mb-2", style: "width: 180px; z-index: 1") %>
              <% end %>
              <button type="button" class="btn btn-outline-dark" data-mdb-ripple-color="dark"
                style="z-index: 1;">
                <%= link_to "Edit Profile", edit_researcher_path(@researchers) %>
              </button>
            </div>

            <div class="ms-3" style="margin-top: 110px;">
              <h5><%= @researchers.name %></h5>
              <p><%= @researchers.degree %></p>
            </div>
          </div>
          <div class="p-4 text-black" style="background-color: #f8f9fa;">
          
            <div class="d-flex justify-content-end text-center py-1">
              <div class="px-3">
                <p class="mb-1 h5">1026</p>
                <p class="small text-muted mb-0">Work</p>
              </div>
              <div>
                <p class="mb-1 h5">478</p>
                <p class="small text-muted mb-0">Projects</p>
              </div>
            </div>
          </div>
          <div class="card-body p-4 text-black">
            <div class="mb-5">
              <p class="lead fw-normal mb-1">About</p>
              <div class="p-4" style="background-color: #f8f9fa;">
                <p><%= @researchers.email %></p>
                <p><%= @researchers.website %></p>
                <p><%= @researchers.birthday %></p>
                <p><%= @researchers.resume %></p>
              </div>
            </div>
            <div class="d-flex justify-content-between align-items-center mb-4">
              <p class="lead fw-normal mb-0">Recent projects</p>
            </div>
            <div class="d-flex justify-content-between align-items-center mb-4">
              <div class="mb-5">
                <p class="lead fw-normal mb-1">Institutions</p>
              <div class="p-4" style="background-color: #f8f9fa;">
              <% @researchers.institutions.each do |institution|%>
                <p><%= link_to institution.name, institution_path(institution) %></p>
              <% end %>
              </div>
              </div>
            </div>
            <div class="d-flex justify-content-between align-items-center mb-4">
              <p class="lead fw-normal mb-0">Institutions</p>
              <div class="p-4" style="background-color: #f8f9fa;">
              <% @researchers.institutions.each do |institution|%>
                <p><%= link_to institution.name, institution_path(institution) %></p>
              <% end %>
              </div>
            </div>
          </div>
          <%= render "articles/listArticles", article: @researchers.articles %>
        </div>
      </div>
    </div>
  </div>
</section>