<div class="section-header">
  <h2>Articles</h2>
</div>
<div class="row">
  <% if user_signed_in? && ['user','admin','superadmin'].include?(current_user.user_type) %>
    <%= link_to "New Article", new_article_path, :class=>"btn btn-primary" %>
  <% end %>
</div>
<section id="projects" class="services sections-bg">
  <div class="container" data-aos="fade-up">
    <div class="row gy-4" data-aos="fade-up" data-aos-delay="100">
      <% @articles.each do |article| %>
        <div class="col-lg-4 col-md-6">
          <div class="service-item  position-relative">
            <h5><a href="/articles/<%= article.id %>"> <%= article.title %></a></h5>
            <p class="post-category"><%= article.abstract.first(220) %></p>
            <% if  article.keyword_list%>
              <% if  article.keyword_list.length !=0%>
            <h6>Keywords:
                <% article.keyword_list.each do |tag| %>
                  <%=link_to tag,tagged_path(tag: tag)%>
              <% end %>
            </h6>
              <% end %>
            <% end %>

            <a href="articles/searchByType/<%=article.type%>"> <%=article.type %></a>
          </div>
        </div>
    <% end %>
    </div>
  </div>
</section>

