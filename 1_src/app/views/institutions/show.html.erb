
<div class="section-header">
  <h1><%=@institutions.name %></h1>
</div>


<div class="blog">
  <div class="container aos-init aos-animate">
    <article class="blog-details">
      <%= image_tag "PlaceholderInst.png" %>
        <!--<p><%= @institutions.image %></p>-->
        <ul>
            <a href="<%= @institutions.url %>"<p><%= @institutions.url %></p></a>
            <p><%= @institutions.partner %></p>
        </ul>

        <ul><% if user_signed_in? %>
            <li><%= link_to "Editar", edit_institution_path(@institutions) %></li>
            <li><%= button_to 'Eliminar', @institutions, method: :delete,
                    confirm: 'Are you sure?' %></li><% end %>
        </ul>
    </article>
    <a href="/institutions">Voltar a Lista de Instituições</a>
  </div>
</div>

