<div class="section-header">
  <h2><%= t("projects") %></h2>
</div>

<section id="projects" class="services sections-bg">
  <div class="container" data-aos="fade-up">
    <div class="row gy-4" data-aos="fade-up" data-aos-delay="100">
         <% @projects.each do |project| %>
            <div class="col-lg-4 col-md-6">
               <div class="service-item  position-relative"> 
                <h6><%= link_to project.title, project %></h6>  
                  <div class="post-img">
                    <% if project.avatar.attached? %>
                      <%= image_tag project.avatar, width: '100%', height: '150px' %>
                    <% elsif %>
                      <%= image_tag("banner.png", width: '100%', height: '150px') %>
                    <% end %>
                  </div>
               <p class="post-category"><%= project.description.first(220) %></p>

               
                <div class="post-meta">
                  <p class="post-author-list"><%= project.researcher %> | <time><%= project.start_date %></time></p>
                </div> 
               
               </div>
            </div>  
         <% end %> 
    </div>
  <%= will_paginate @projects %>
  </div>
      <% if user_signed_in? && ['user','admin','superadmin'].include?(current_user.user_type) %>

    <% end %><a class="fixedButton" href="projects/new">
  <div class="roundedFixedBtn"><i class="bi bi-pencil-square"></i></div>
</a>
</div>
</section>