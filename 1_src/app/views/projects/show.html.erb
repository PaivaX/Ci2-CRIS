<div class="section-header">
  <h1><%= @projects.title %></h1>
</div>

<div class="blog">
  <div class="container aos-init aos-animate">
    <article class="blog-details">
      <div class="post-img">
        <img src="https://i0.wp.com/samaritanfundprogram.com/wp-content/uploads/2021/07/SFP-Logo-PNG.png?resize=300%2C150&ssl=1" alt="" class="img-fluid">
      </div>
      <div class="meta-top">
        <ul>
          <li class="d-flex align-items-center"><i class="bi bi-person"></i> <a href="">Rui Paiva</a></li>
          <li class="d-flex align-items-center"><i class="bi bi-clock"></i> <a href=""><time datetime="2020-01-01">23/01/2023</time></a></li>
          <li class="d-flex align-items-center"><i class="bi bi-link"></i> <a href=""><%= @projects.url_project %></a></li>
        </ul>
      </div>
    <div class="content">
      <p><%= @projects.description %></p>
      <p></p>
      <p><%= @projects.project_role %></p>
      <% @projects.articles.each do |article|  %>
        <a href="/articles/<%= article.id %>"><%= article.title%></a>
      <%end%>
    </div>
        <div class="meta-bottom">
          <i class="bi bi-calendar"></i>
                <ul class="cats">
                  <li>Status: <%=  %></li> 
                </ul>
          <i class="bi bi-calendar"></i>
                <ul class="cats">
                  <li>Start Date: <%= @projects.start_date %></li> 
                </ul>
          <i class="bi bi-calendar-x"></i>
                <ul class="cats">
                  <li>End Date: <%= @projects.end_date %></li>
                </ul>
          <i class="bi bi-eraser"></i>
                <ul class="cats">
                  <li><%= link_to "Edit", edit_project_path(@projects) %> </li> | 
                  <li><%= link_to "Destroy", @projects, method: :delete, data: {confirm: 'Are you sure?'} %></li>
                </ul>
          </div>

    </article>
  </div>
</div>
