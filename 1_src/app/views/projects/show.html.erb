<div class="section-header">
  <h1><%= @projects.title %></h1>
</div>

<div class="blog">
  <div class="container aos-init aos-animate">
    <article class="blog-details">
      <div class="row">
        <div class="col-md-5"><%= image_tag("banner.png", class:"img-fluid") %></div>
        <div class="col-md-6">
          <ul>
            <li class="d-flex align-items-center"><i class="bi bi-person"></i> <a href=""><%#= @projects.researcher %></a></li>
            <li class="d-flex align-items-center"><i class="bi bi-clock"></i> <a href=""><time datetime="2020-01-01">23/01/2023</time></a></li>
            <li class="d-flex align-items-center"><i class="bi bi-link"></i> <a href=""><%= @projects.url_project %></a></li>
            <li class="d-flex align-items-center"><i class="bi bi-link"></i> <a href=""><%= @projects.name_program %></a></li>
            <li class="d-flex align-items-center"><i class="bi bi-link"></i> <a href=""><%= @projects.name_program %></a></li>
          </ul>
        </div>
      </div>

    <div class="content">
      <p><%= @projects.description %></p>
      <p></p>
      <p><%= @projects.project_role %></p>

    </div>
        <div class="meta-bottom">
          <i class="bi bi-calendar"></i>
                <ul class="cats">
                  <li>Status: <%= @projects.project_role %></li> 
                </ul>
          <i class="bi bi-calendar"></i>
                <ul class="cats">
                  <li>Start Date: <%= @projects.start_date %></li> 
                </ul>
          <i class="bi bi-calendar-x"></i>
                <ul class="cats">
                  <li>End Date: <%= @projects.end_date %></li>
                </ul>
        <% #Opção de editar e apagar só aparece se estiver com o login efetuado %>
        <% if user_signed_in? && ['user','admin','superadmin'].include?(current_user.user_type) %>
          <i class="bi bi-eraser"></i>
                <ul class="cats">
                  <li><%= link_to "Edit", edit_project_path(@projects) %> </li> | 
                  <li><%= link_to "Destroy", @projects, method: :delete, data: {confirm: 'Are you sure?'} %></li>
                </ul>
        <% end %>
          </div>
      <div class="meta-bottom">
      <%= render "articles/listArticles", article: @projects.articles %>
      </div>
    </article>

  </div>
</div>
